<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyInterests"
    android:gravity="center_horizontal"
    android:background="@color/main_bg"
    android:padding="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_interest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Interests:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <ProgressBar
            android:id="@+id/pb_my_interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/light_blue"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"/>

        <Spinner
            android:id="@+id/sp_interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            />
        <Button
            android:id="@+id/btn_add_as_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Add as my interest"
            android:textAllCaps="false"
            android:textColor="@color/main_bg"
            android:textStyle="bold"
            android:layout_marginVertical="4dp"
            android:visibility="gone"
            />

    </LinearLayout>

</ScrollView>